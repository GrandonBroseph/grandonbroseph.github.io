{
  "name": "grandonbroseph.github.io",
  "version": "1.0.0",
  "description": "Ongoing draft for my website.",
  "repository": {
    "type": "git",
    "url": "https://github.com/grandonbroseph/grandonbroseph.github.io.git"
  },
  "scripts": {
    "postinstall": "npm start",
    "start": "npm-run-all imagemin build --parallel serve watch:*",
    "imagemin": "imagemin src/img/**/*.* --out-dir=dist/img",
    "serve": "browser-sync start --no-notify --no-ui --server --files \"index.html, dist/*.+(css|js)\" --port 8080",
    "pug": "pug -P ./src/index.pug -o .",
    "scss": "node-sass src -o dist",
    "autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "rollup": "rollup src/js/main.js -o dist/main.js",
    "clean": "rimraf dist",
    "build": "npm-run-all clean build:*",
    "build:html": "npm run pug",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run rollup",
    "build:img": "npm run imagemin",
    "build:swf": "copyfiles -f \"src/swf/*.swf\" dist/swf",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "pug -Pw src/index.pug -o .",
    "watch:css": "node-sass -w src -o dist",
    "watch:js": "rollup -w -i src/js/main.js -o dist/main.js",
    "onchange": "npm-run-all --parallel onchange:*",
    "onchange:html": "onchange \"src/**/*.pug\" -i -- npm run build:html",
    "onchange:css": "onchange \"src/**/*.scss\" -i -- npm run build:css",
    "onchange:js": "onchange \"src/**/*.js\" -i -- npm run build:js"
  },
  "author": "Brandon Semilla (grandonbroseph+gh@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "browser-sync": "^2.17.5",
    "copyfiles": "^1.0.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.3",
    "rollup-watch": "^2.5.0",
    "uglifyjs": "^2.4.10"
  }
}
