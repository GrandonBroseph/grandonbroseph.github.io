mixin footer(name)
  footer#footer.footer
    section.content
      span.text Copyright &copy; #{new Date().getFullYear()} #{name}.
    .break.-light
    section.icons
      a.button.-round.icon.twitter(href='https://twitter.com/grandonbroseph/' target='_blank')
        include ../../img/svg/twitter.svg
      a.button.-round.icon.github(href='https://github.com/semibran/' target='_blank')
        include ../../img/svg/github.svg
      a.button.-round.icon.codepen(href='http://codepen.io/semibran/' target='_blank')
        include ../../img/svg/codepen.svg
